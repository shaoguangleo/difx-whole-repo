# a navigation aid
def os_chdir(dir):
    os.chdir(dir)
    if verb:
        print "--> " + dir
        print "==> " + os.getcwd()
        print
    sys.stdout.flush()

# work out build and source directories
blddir = os.getcwd()
setupdir = os.path.dirname(sys.argv[0])
if not setupdir:
    setupdir = "."
os_chdir(setupdir)

# master_tags/ has no setup directory
if not master_tag:
    os_chdir("..")
